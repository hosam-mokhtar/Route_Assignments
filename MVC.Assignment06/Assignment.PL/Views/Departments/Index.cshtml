@model IEnumerable<DepartmentDto>
@{
    var department = @ViewData["Department01"] as DepartmentDto;
}

<div class="alert alert-success">
@*   @ViewData["Msg"]
     <br/>
     @ViewBag.Msg     *@

@*  @ViewData["Msg01"]
    <br />
    @ViewBag.Msg02    *@


    @department?.Name
    <br/>
    @ViewBag.Department02.Name

</div>

@if(!string.IsNullOrWhiteSpace(TempData["Message"] as string))
{
<div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right:25px; z-index: 100;">
    <div class="toast fade show " role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto text-success">Success!!</strong>
            <small>Just now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            @TempData["Message"]
        </div>
    </div>
</div>
}

<h1>All Departments</h1>

<a class="btn btn-primary my-3" asp-controller="Departments" asp-action="Create">Create New Department</a>
@* (tag helpers) save than href="" *@

<br/>  @* break line (self closen tag) *@

@* "Model" is Alias name IEnumerable<DepartmentDto> *@ 
@if (@* Model.Count() > 0  OR *@ Model?.Any() ?? false)
{
	<table class="table table-striped table-hover mt-2">
		<thead class = "text-center">
			<tr>
				@*<th> to create Bold header *@ 
				<th><!--Code or --> <!-- c# function because this detect syntax error--> @Html.DisplayNameFor(d => d.Code)</th>
				<th><!-- Name  or  --> @Html.DisplayNameFor(d => d.Name)</th>
				<th><!-- Description or--> @Html.DisplayNameFor(d => d.Description)</th>
				<th><!--Date Of Creation or--> @Html.DisplayNameFor(d => d.DateOfCreation)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>

			</tr>
		</thead>
		<!--------------------------------------------Body----------------------------------------------->
		<tbody class="text-center">
			@foreach (var dept in Model)
			{
				<tr>
					<td> @dept.Code</td>
					<td> @dept.Name</td>
					<td> @dept.Description</td>
					<td> @dept.DateOfCreation</td>

                    @*HtmlHelpers*@
                    @*@Html.PartialAsync("_ButtonsPartialView", dept.DeptId)*@
                    @*or*@
                    @*HtmlTag*@
                    <partial name="_ButtonsPartialView" model="dept.DeptId" />

                 @* <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@dept.DeptId">  <i class="fas fa-trash"></i> Delete</a></td> *@
                    <td><button type="button"
                            class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#DeleteModal-@dept.DeptId">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <div class="modal fade"
                         id="DeleteModal-@dept.DeptId"
                         tabindex="-1"
                         aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                                        Delete Department
                                    </h1>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">Are You Sure to Delete this Department?</div>
                                <div class="modal-footer">
                                    <form asp-action="Delete"
                                          asp-controller="Departments"
                                          asp-route-id="@dept.DeptId"
                                          class="mt-4">
                                        <button type="button"
                                                class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            Close
                                        </button>
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    </td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-2 ">
		<h2>No Departments Found !!</h2>
    </div>
}